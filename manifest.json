{
    "name": "KBD",
    "version": "1.0",
    "description": "Add predictive text shortcuts to any website for power users and accessibility",
    "manifest_version": 2,
    "page_action": {
        "default_popup": "src/html/popup.html",
        "default_icon": {
            "48": "assets/keyboard.png",
            "32": "assets/keyboard.png",
            "128": "assets/keyboard.png"
        }
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "css": ["src/css/styles.css"],
        "js": ["src/js/selector.js"]
    }]
}